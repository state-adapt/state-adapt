{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@state-adapt/angular": ["libs/angular/src/index.ts"],
      "@state-adapt/angular-router": ["libs/angular-router/src/index.ts"],
      "@state-adapt/core": ["libs/core/src/index.ts"],
      "@state-adapt/core/adapters": ["libs/core/adapters/src/index.ts"],
      "@state-adapt/counter-ui": ["libs/counter-ui/src/index.ts"],
      "@state-adapt/dashboards-feature": ["libs/dashboards-feature/src/index.ts"],
      "@state-adapt/ngrx": ["libs/ngrx/src/index.ts"],
      "@state-adapt/ngxs": ["libs/ngxs/src/index.ts"],
      "@state-adapt/react": ["libs/react/src/index.ts"],
      "@state-adapt/rxjs": ["libs/rxjs/src/index.ts"],
      "@state-adapt/shopping": ["libs/shopping/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
